<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/as_game2d"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.apps.philipps.audiosurf.activities.Game2D">

    <TextView
        android:gravity="center"
        android:text=""
        android:background="@color/textbg"
        android:width="200dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/as_data"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:gravity="center"
        android:text="Breathy Data"
        android:width="200dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:layout_above="@+id/as_data"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0 fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/as_framerate" />

    <TextView
        android:text="frame 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/as_frameCount"
        android:layout_below="@+id/as_framerate"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
